# Kernel hardening configuration

# Address Space Layout Randomization
kernel.randomize_va_space=2

# Kernel pointer restrictions
kernel.kptr_restrict=2

# Dmesg restrictions
kernel.dmesg_restrict=1

# Unprivileged BPF disabled
kernel.unprivileged_bpf_disabled=1

# Unprivileged user namespaces
user.max_user_namespaces=0

# KASLR
kernel.kaslr=1

# Stack canaries (compile-time)
# Add to kernel config: CONFIG_STACKPROTECTOR_STRONG=y

# RELRO (compile-time)
# Add to kernel config: CONFIG_RELOCATABLE=y

